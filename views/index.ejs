<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>URL Shortener</title>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <span class="navbar-brand mb-0 h1">URL Shortener</span>
          <span class="d-flex">
            <h4>Hi, name</h4>
            <a href="/logout">Logout</a>
          </span>
        </div>
      </nav>
<form action="/shortUrls" method="POST" class="my-4 form-inline">
    <!-- <label for="fullUrl" class="sr-only">Long Url</label> -->
    <input id="fullUrl" name="fullUrl" type="url" placeholder="Long Url">
    <button type="submit" class="btn btn-success">Get short URL</button>
</form>
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Long Url</th>
                <th>Short Url </th>
                <th>Visits</th>
            </tr>
        </thead>
        <tbody>
            <% urls.forEach(url => { %>
            <tr>
                <td><a href="<%= url.full %>"> <%= url.full %> </td>
                    <td><a href="<%= url.short %>"> <%= url.short  %> </td>
                <td> <%= url.visits  %> </td>
            </tr>           
            <% }) %>
        </tbody>
    </table>
</div>
</body>
</html>.